<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp">

	<RelativeLayout
		android:id="@+id/rl_head"
		android:layout_width="100dp"
		android:layout_height="100dp">

		<android.support.v7.widget.AppCompatImageView
			android:id="@+id/aiv_head"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			app:srcCompat="@mipmap/ic_launcher_round"
			/>

		<TextView
			android:id="@+id/tv_distance"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:layout_alignParentBottom="true"
			android:background="@color/transparent_black"
			android:gravity="center"
			android:text="距离100m"
			android:textColor="@color/tv_white"
			android:textSize="13sp"/>
	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:layout_marginLeft="10dp">

		<TextView
			android:id="@+id/tv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLength="15"
			android:text="一间风景好房子"
			android:textColor="@color/tv_black"
			android:textSize="16sp"/>

		<TextView
			android:id="@+id/tv_house_type"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_title"
			android:layout_marginTop="5dp"
			android:text="2室1厅2卫"
			android:textColor="@color/tv_colorPrimaryHint"
			android:textSize="13sp"/>

		<TextView
			android:id="@+id/tv_location"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_title"
			android:layout_marginStart="8dp"
			android:layout_marginTop="5dp"
			android:layout_toEndOf="@id/tv_house_type"
			android:maxLength="10"
			android:text="仲恺农业工程学院"
			android:textColor="@color/tv_colorPrimaryHint"
			android:textSize="13sp"/>

		<TextView
			android:id="@+id/tv_label1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_house_type"
			android:layout_marginTop="5dp"
			android:padding="4dp"
			android:maxLength="6"
			android:text="地铁"
			android:textColor="@color/tv_colorPrimary"
			android:background="@drawable/bg_rectangle_label"
			android:textSize="12sp"/>

		<TextView
			android:id="@+id/tv_label2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_house_type"
			android:layout_toEndOf="@id/tv_label1"
			android:layout_marginTop="5dp"
			android:layout_marginStart="8dp"
			android:padding="4dp"
			android:maxLength="6"
			android:text="独立阳台"
			android:textColor="@color/tv_colorPrimary"
			android:background="@drawable/bg_rectangle_label"
			android:textSize="12sp"/>

		<TextView
			android:id="@+id/tv_label3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_house_type"
			android:layout_toEndOf="@id/tv_label2"
			android:layout_marginTop="5dp"
			android:layout_marginStart="8dp"
			android:padding="4dp"
			android:maxLength="6"
			android:text="公交"
			android:textColor="@color/tv_colorPrimary"
			android:background="@drawable/bg_rectangle_label"
			android:textSize="12sp"/>

		<TextView
			android:id="@+id/tv_amount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/tv_label1"
			android:layout_marginTop="5dp"
			android:layout_alignParentBottom="true"
			android:text="￥1500/月"
			android:textColor="@color/bg_pink"
			android:textSize="18sp"/>
	</RelativeLayout>
</LinearLayout>