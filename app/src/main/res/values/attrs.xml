<?xml version="1.0" encoding="utf-8"?>
<resources>
	<declare-styleable name="TypeContentView">
		<attr name="title" format="string"/>
		<attr name="content" format="string"/>
		<attr name="hint" format="string"/>
	</declare-styleable>

	<declare-styleable name="WheelView">
		<attr name="itemVisibleNum" format="integer"/>

		<attr name="textColorOuter" format="color"/>
		<attr name="textSizeOuter" format="dimension"/>
		<attr name="textColorCenter" format="color"/>
		<attr name="textSizeCenter" format="dimension"/>

		<attr name="lineColor" format="color"/>

		<attr name="isLoop" format="boolean"/>
		<attr name="lineSpaceingDimens" format="dimension"/>

		<attr name="wheelGravity" format="enum">
			<enum name="left" value="234"/>
			<enum name="center" value="354"/>
			<enum name="right" value="894"/>
		</attr>

	</declare-styleable>

	<declare-styleable name="ShapeImageView">
		<attr name="siv_shape" format="enum">
			<enum name="rect" value="1"/>
			<enum name="circle" value="2"/>
			<enum name="oval" value="3"/>
		</attr>
		<attr name="siv_round_radius" format="dimension"/>
		<attr name="siv_round_radius_leftTop" format="dimension"/>
		<attr name="siv_round_radius_leftBottom" format="dimension"/>
		<attr name="siv_round_radius_rightTop" format="dimension"/>
		<attr name="siv_round_radius_rightBottom" format="dimension"/>
		<attr name="siv_border_size" format="dimension"/>
		<attr name="siv_border_color" format="color"/>
	</declare-styleable>

</resources>
